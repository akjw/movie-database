<h1 class="ml-2">Genres</h1>
<div class="row">
    <div class="col-md-6">
        <% genres.forEach(genre => { %>
        <div class="mb-2 ml-2">
            <%= genre.name %>
            <a class="btn btn-primary btn-sm" href="/genres/show/<%= genre._id %>">View</a>
            <a class="btn btn-primary btn-sm" href="/genres/edit/<%= genre._id %>">Edit</a>
            <form
                method="POST"
                style="display: inline;"
                action="/genres/delete/<%= genre._id  %>?_method=DELETE"
            >
                <button class="btn btn-danger btn-sm" type="submit">Delete</button>
            </form>
        </div>
        <% }); %>
    </div>
</div>

<h2 class="ml-2">Add Genre</h2>
<form class="mx-2 form-horizontal" action="/genres/create" method="post">
    <label class="control-label">Name</label>
    <input class="form-control" type="text" name="name">
  
    <button class="mt-2 btn btn-primary" type="submit">Save</button>
</form>