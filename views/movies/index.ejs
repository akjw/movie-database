<h1 class="ml-2"> Movie Archive</h1>
<div class="row">
    <div class="col-md-6">
        <% movies.forEach(movie => { %>
        <div class="mb-2 ml-2">
            <%= movie.title %>
            <a class="btn btn-primary btn-sm" href="/show/<%= movie._id %>">View</a>
            <a class="btn btn-primary btn-sm" href="/edit/<%= movie._id %>">Edit</a>
            <form
                method="POST"
                style="display: inline;"
                action="/delete/<%= movie._id  %>?_method=DELETE"
            >
                <button class="btn btn-danger btn-sm" type="submit">Delete</button>
            </form>
        </div>
        <% }); %>
    </div>
</div>

