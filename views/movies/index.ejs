
<div class="container mt-5">
    <div class="mb-3">
      <div class="row">
        <div class="col-md-9">
          <a class="btn btn-danger" href="/create">New Movie</a>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-9">
        <div class="row">
          <% movies.forEach(movie => { %>
          <div class="col-md-6 mb-3">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">
                  <a href="/show/<%= movie._id %>"><%= movie.title %></a>
                </h5>
                <div>
                  <% movie.genres.forEach(genre => {%>
                  <span class="badge badge-secondary">
                    <%= genre.name %>
                  </span>
                  <% }) %>
                </div>
                <div>
                    <% movie.actors.forEach(actor => {%>
                    <span class="badge badge-info">
                      <%= actor.name %>
                    </span>
                    <% }) %>
                  </div>
                
                <p class="text-muted card-text">
                  Directed by: <%= movie.director.name %> 
                </p>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>


