<div class="mx-2">
    <h2 class="mb-2"><%= movie.title %></h2>
    <div class="mb-2">Description: <%= movie.description %></div>
    <div class="mb-2">Genres: 
        <% movie.genres.forEach(genre => { %>
            <div><%= genre.name %></div>
       <% }) %></div>
    <div class="mb-2">Director: <%= movie.director.name %></div>
    <div class="mb-2">Image: <%= movie.imagePath %></div>
    <div class="mb-2">Featured: <%= movie.featured %></div>
</div>

<div class="row">
    <div class="mx-2 col-sm"><%= movie.title %>'s Cast List
        <ol>
            <% movie.actors.forEach(actor => {%>
            <li><%= actor.name %></li>
            <% }) %>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="mb-2 ml-2">
            <a class="btn btn-primary btn-sm" href="/edit/<%= movie._id %>">Edit</a>
            <form
                method="POST"
                style="display: inline;"
                action="/delete/<%= movie._id  %>?_method=DELETE"
            >
                <button class="btn btn-danger btn-sm" type="submit">Delete</button>
            </form>
        </div>
    </div>
</div>
